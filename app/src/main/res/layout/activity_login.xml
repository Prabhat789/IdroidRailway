<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LoginContainer"
        android:clickable="true"
        android:gravity="center_horizontal">

        <com.idroidms.railway.util.CustomTextLite
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@android:color/transparent"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:textSize="35sp"
            android:id="@+id/textView"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnLogin"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout">
            <EditText
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:ems="8"
                android:singleLine="true"
                android:textColorHint="@color/smoke_white"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:id="@+id/editEmail"/>

            <View
                android:layout_width="240dp"
                android:layout_height="0.6dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"/>

            <EditText
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:hint="Password"
                android:ems="8"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/smoke_white"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:id="@+id/editPassword"
                android:layout_marginTop="15dp"/>
            <View
                android:layout_width="240dp"
                android:layout_height="0.6dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"/>
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="240dp"
                android:layout_marginTop="8dp"
                android:gravity="left|center_vertical"
                android:layout_height="wrap_content"
                android:text="  Save Password"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/white"
                />

        </LinearLayout>


        <Button
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/white"
            android:text="Login"
            android:textAllCaps="true"
            android:id="@+id/btnLogin"
            android:layout_above="@+id/btnSignUp"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:background="@color/login_btn"/>
        <Button
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/white"
            android:text="Signup"
            android:textAllCaps="true"
            android:id="@+id/btnSignUp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/btnForgotPassword"
            android:layout_marginBottom="60dp"
            android:background="@color/login_btn"/>

        <com.idroidms.railway.util.CustomButton
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text"
            android:id="@+id/btnForgotPassword"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</LinearLayout>