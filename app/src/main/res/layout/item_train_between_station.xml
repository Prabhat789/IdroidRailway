<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <com.pktworld.railway.util.CustomTextLite
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:textColor="@color/dark_grey"
            android:id="@+id/txtName"/>
        <com.pktworld.railway.util.CustomTextLite
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_grey"
            android:id="@+id/txtNumber"/>
        <com.pktworld.railway.util.CustomTextLite
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_grey"
            android:id="@+id/txtDepTime"/>
        <com.pktworld.railway.util.CustomTextLite
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_grey"
            android:id="@+id/txtArrTime"/>
        <com.pktworld.railway.util.CustomTextLite
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_grey"
            android:id="@+id/txtTravlTime"/>
        <com.pktworld.railway.util.CustomTextLite
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_grey"
            android:id="@+id/txtFrom"/>
        <com.pktworld.railway.util.CustomTextLite
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_grey"
            android:id="@+id/txtTo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/dark_grey"
        android:id="@+id/lldataCont">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/bpDarker_red"
                android:text="DAYS"
                android:gravity="center"
                android:layout_weight="0.125"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:text="SUN"
                android:gravity="center"
                android:layout_weight="0.125"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:text="MON"
                android:gravity="center"
                android:layout_weight="0.125"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:text="TUE"
                android:gravity="center"
                android:layout_weight="0.125"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:text="WED"
                android:gravity="center"
                android:layout_weight="0.125"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:text="THU"
                android:gravity="center"
                android:layout_weight="0.125"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:text="FRI"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_weight="0.125"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:text="SAT"
                android:gravity="center"
                android:layout_weight="0.125"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:padding="2dp"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/bpDarker_red"
                android:text="AVAIL"
                android:gravity="center"
                android:layout_weight="0.125"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:id="@+id/txtSun"
                android:gravity="center"
                android:layout_weight="0.125"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:id="@+id/txtMon"
                android:gravity="center"
                android:layout_weight="0.125"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/txtTue"
                android:layout_weight="0.125"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:id="@+id/txtWed"
                android:gravity="center"
                android:layout_weight="0.125"/>
            <com.pktworld.railway.util.CustomTextLite
