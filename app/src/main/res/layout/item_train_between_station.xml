                android:layout_weight="0.125"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/txtSat"
                android:layout_weight="0.125"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/yellow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/dark_grey"
        android:id="@+id/lldataCont1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_very_small"
                android:textColor="@color/bpDarker_red"
                android:text="Classes"
                android:gravity="center"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:text="FC"
                android:gravity="center"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:text="3E"
                android:gravity="center"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:text="CC"
                android:gravity="center"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:text="SL"
                android:gravity="center"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:text="2S"
                android:gravity="center"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
