                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:text="1A"
                android:gravity="center"
                android:layout_weight="0.111"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:padding="2dp"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_very_small"
                android:textColor="@color/bpDarker_red"
                android:text="AVAIL"
                android:gravity="center"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:id="@+id/txtFc"
                android:gravity="center"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:id="@+id/txt3E"
                android:gravity="center"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/txtCc"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:id="@+id/txtSl"
                android:gravity="center"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/txt2S"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:gravity="center"
                android:id="@+id/txt2A"
                android:textColor="@color/white"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/txt3A"
                android:layout_weight="0.111"/>
            <com.pktworld.railway.util.CustomTextLite
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/txt1A"
                android:layout_weight="0.111"/>
