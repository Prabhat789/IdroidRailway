<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <com.idroidms.railway.util.CustomTextLite
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/white"
        android:layout_marginTop="41dp"
        android:text="Enter your Email address and\nwe will send you your\npassword via mail."
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:hint="Email"
            android:textColorHint="@color/smoke_white"
            android:textSize="@dimen/small_text"
            android:maxLines="1"
            android:backgroundTint="@color/white"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:ems="8"
            android:textColor="@color/white"
            android:id="@+id/editEmail"/>
        <com.idroidms.railway.util.CustomButton
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@color/login_btn"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text"
            android:text="Submit"
            android:textAllCaps="true"
            android:id="@+id/btnNext"/>
    </LinearLayout>


    </RelativeLayout>

