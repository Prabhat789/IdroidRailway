<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smoke_white">
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:background="@color/trans_black">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.60"
            android:layout_height="40dp"
            android:textSize="@dimen/very_very_small"
            android:id="@+id/editPnrNumber"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:hint="PNR Number"
            android:background="@drawable/edit_rounded_corner_smoke_white"
            android:textColor="@color/dark_grey"/>

        <com.idroidms.railway.util.CustomButton
            android:layout_width="0dp"
            android:layout_weight="0.40"
            android:layout_height="40dp"
            android:text="Submit"
            android:id="@+id/btnSubmit"
            android:layout_marginLeft="10dp"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/small_text"
            android:elevation="4dp"
            android:background="@drawable/btn_rounded_corner_yellow"/>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/lldataCont"
            android:background="@color/white"
            android:elevation="5dp"
            android:orientation="vertical">

            <com.idroidms.railway.util.CustomTextLite
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:textColor="@color/dark_grey"
                android:id="@+id/txtTrainName"/>
            <com.idroidms.railway.util.CustomTextLite
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:layout_marginTop="8dp"
                android:textColor="@color/dark_grey"
                android:id="@+id/txtTrainNumber"/>
            <com.idroidms.railway.util.CustomTextLite
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:layout_marginTop="8dp"
                android:textColor="@color/dark_grey"
                android:id="@+id/txtPnr"/>
            <com.idroidms.railway.util.CustomTextLite
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:layout_marginTop="8dp"
                android:textColor="@color/dark_grey"
                android:id="@+id/txtDoj"/>
            <com.idroidms.railway.util.CustomTextLite
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:layout_marginTop="8dp"
                android:textColor="@color/dark_grey"
                android:id="@+id/txtChartPrep"/>
            <com.idroidms.railway.util.CustomTextLite
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:layout_marginTop="8dp"
                android:textColor="@color/dark_grey"
                android:id="@+id/txtTotalPass"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="@color/title_clolor"/>
            <com.idroidms.railway.util.CustomTextLite
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/small_text"
                android:id="@+id/txtTrainStartDate"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="@color/title_clolor"/>
            <com.idroidms.railway.util.CustomTextLite
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/small_text"
                android:id="@+id/txtFrom"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="@color/title_clolor"/>
            <com.idroidms.railway.util.CustomTextLite
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/small_text"
                android:id="@+id/txtTo"/>

        </LinearLayout>

    <com.idroidms.railway.util.CustomTextLite
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Passengers"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:id="@+id/txtpas"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/dark_grey"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listPassangers"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp">

    </ListView>



</LinearLayout>