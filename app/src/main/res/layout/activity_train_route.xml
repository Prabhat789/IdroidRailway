<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:background="@color/trans_black">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.60"
                    android:layout_height="40dp"
                    android:textSize="@dimen/very_very_small"
                    android:id="@+id/editTrainNumber"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:inputType="number"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:hint="Train Number"
                    android:background="@drawable/edit_rounded_corner_smoke_white"
                    android:textColor="@color/dark_grey"/>

                <com.pktworld.railway.util.CustomButton
                    android:layout_width="0dp"
                    android:layout_weight="0.40"
                    android:layout_height="40dp"
                    android:text="Submit"
                    android:id="@+id/btnSubmit"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/small_text"
                    android:elevation="4dp"
                    android:background="@drawable/btn_rounded_corner_yellow"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@color/dark_grey"
                android:id="@+id/lldataCont">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/bpDarker_red"
                        android:text="DAYS"
                        android:gravity="center"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/white"
                        android:text="SUN"
                        android:gravity="center"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/white"
                        android:text="MON"
                        android:gravity="center"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/white"
                        android:text="TUE"
                        android:gravity="center"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/white"
                        android:text="WED"
                        android:gravity="center"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/white"
                        android:text="THU"
                        android:gravity="center"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:text="FRI"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/white"
                        android:text="SAT"
                        android:gravity="center"
                        android:layout_weight="0.125"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:padding="2dp"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/bpDarker_red"
                        android:text="AVAIL"
                        android:gravity="center"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/white"
                        android:id="@+id/txtSun"
                        android:gravity="center"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/white"
                        android:id="@+id/txtMon"
                        android:gravity="center"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/txtTue"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/white"
                        android:id="@+id/txtWed"
                        android:gravity="center"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/txtThu"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:gravity="center"
                        android:id="@+id/txtFri"
                        android:textColor="@color/white"
                        android:layout_weight="0.125"/>
                    <com.pktworld.railway.util.CustomTextLite
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/txtSat"
                        android:layout_weight="0.125"/>
                </LinearLayout>

            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:dividerHeight="10dp"
                android:divider="@android:color/transparent"
                android:id="@+id/listAvailability"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">

            </ListView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>